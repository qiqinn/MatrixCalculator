                        android:id="@+id/Q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingEnd="3dp"
                        android:paddingStart="3dp"
                        android:text="@string/Ques1"
                        android:textSize="15sp" />

